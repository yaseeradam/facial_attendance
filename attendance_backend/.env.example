# Example environment variables for deployment
# Copy this file to .env and update the values

# Database - For local development use SQLite
# DATABASE_URL=sqlite:///./attendance.db
# For Render/Production, this will be set automatically from the PostgreSQL database

# Security - Generate a new secret key in production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Face Recognition Settings
FACE_SIMILARITY_THRESHOLD=0.6
INSIGHTFACE_MODEL_NAME=buffalo_l

# App Settings
APP_NAME=Face Recognition Attendance System
DEBUG=False
